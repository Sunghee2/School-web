@model RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="col-md-2 col-md-offset-5">
        <h2 class="text-center">회원 가입</h2>
        <hr />
        <form class="form-horizontal" method="post">
            <div asp-validation-summary=" All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email">이메일</label>
                <input class="form-control" asp-for="Email" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName">이름</label>
                <input class="form-control" asp-for="FullName" />
                <span class="text-danger" asp-validation-for="FullName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender">성별</label>
                <input class="form-control" asp-for="Gender" />
                <span class="text-danger" asp-validation-for="Gender"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">비밀번호</label>
                <input class="form-control" asp-for="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">비밀번호 재입력</label>
                <input class="form-control" asp-for="ConfirmPassword" />
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-info" type="submit">가입</button>
            </div>
        </form>
    </div>
</div>